<% layout('layouts/boilerplate') %>
    <div id="cluster-map"></div>
    <h1>All Spaces</h1>

    <% for(let space of spaces) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(space.images.length) {%> 
                        <img class="img-fluid" src="<%= space.images[0].url %>" alt="">
                    <% } else {%> 
                        <img class="img-fluid" src="https://res.cloudinary.com/dsnndxxgj/image/upload/v1672780336/yelpcamp/rzs8yz8eblgbnou1xpk5.webp" alt="">
                    <% } %> 
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= space.title %></h5>
                        <p><%= space.description %></p>
                        <p class="text-muted"><%= space.location %> </p>
                        <a href="/spaces/<%= space._id %>" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
        </div>
    <% } %> 
    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        const spaces = {features: <%-JSON.stringify(spaces)%>}
    </script> 
<script src="javascripts/clusterMap.js"></script>